# ========================================
# EFFICIENCE ANALYTICS - Configuration
# ========================================

# OpenAI API Key (REQUIS pour l'IA)
# Obtenez votre clé sur: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-key-here

# Base de données MongoDB
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/efficience?retryWrites=true&w=majority

# Flask Backend API
FLASK_API_URL=http://localhost:5001

# Environnement
NODE_ENV=development

# URLs publiques
NEXT_PUBLIC_API_URL=http://localhost:3002
NEXT_PUBLIC_APP_NAME=EFFICIENCE ANALYTICS

# Email Service (pour futurs envois de rapports)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Configuration optionnelle
NEXT_PUBLIC_DEBUG=false
LOG_LEVEL=info
